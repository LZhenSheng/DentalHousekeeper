<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:longClickable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#ff505050"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/detail"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:textColor="@color/white"
                        android:text="详情"/>

                    <Button
                        android:id="@+id/resume"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="重置"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/back"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="后退"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/forward"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="前进"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/enlarge"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="放大"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/narrow"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="缩小"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/left"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="左旋"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/right"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="右旋"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/adjustWindowCenter"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="窗体"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/sharpen"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="锐化"
                        android:visibility="gone"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/threshold"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="阈值"
                        android:textColor="@color/white" />
                    <Button
                        android:id="@+id/label"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="标注"
                        android:textColor="@color/white" />
                    <Button
                        android:id="@+id/inverse_image"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="反像"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/sketch"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="素描"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/emboss"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="浮雕"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/edge"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="边缘"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/edge1"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="边缘"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/edge2"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="边缘"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/dissolve"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="溶解"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/blur"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="模糊"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/contrast"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="对比"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/exposure"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="曝光"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/color"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="色彩"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/gamma"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="伽马"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/sphere"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="滤镜"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/haze"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="去雾"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/monochrome"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="单色"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/sobel"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="索阈"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/solar"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="暴滤"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/soft_light"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="柔光"
                        android:textColor="@color/white" />
                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/label_display"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#ff505050"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/distance"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="测距"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/point"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="画点"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/line"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="曲线"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/text"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="文字"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/circle"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="圆形"
                        android:textColor="@color/white" />
                    <Button
                        android:id="@+id/rect"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="矩形"
                        android:textColor="@color/white" />
                    <Button
                        android:id="@+id/oval"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="椭圆"
                        android:textColor="@color/white" />
                    <Button
                        android:id="@+id/line1"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="直线"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/point_width"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="点宽"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/line_width"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="线宽"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/text_width"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#ff505050"
                        android:text="字宽"
                        android:textColor="@color/white" />
                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <com.example.dentalhousekeeper.photoview.PhotoView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <ImageView
                android:id="@+id/ivv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/navigationToolbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="#99808080"
                android:gravity="center_vertical"
                android:longClickable="true"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="invisible">

                <Button
                    android:id="@+id/previousImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_media_previous"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp" />

                <TextView
                    android:id="@+id/imageIndexView"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="50%"
                    android:textSize="15dp" />

                <SeekBar
                    android:id="@+id/serieSeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="220dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:progress="50" />

                <TextView
                    android:id="@+id/imageCountView"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/nextImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_media_next"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thresholdLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="#99808080"
                android:gravity="center_vertical"
                android:longClickable="true"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="invisible">

                <Button
                    android:id="@+id/pImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_media_previous"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="220dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:progress="0" />

                <Button
                    android:id="@+id/nImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_media_next"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>